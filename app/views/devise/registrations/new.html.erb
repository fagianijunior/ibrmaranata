<div class="row">
  <div class="col col-md-5 col-md-offset-3">
    <br><br>
    <center><h2>Cadastrar-se</h2></center>
    <br>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
      <%= devise_error_messages! %>
      
      <%= f.input :name, label: false, placeholder: "Nome completo" , autofocus: true %>
      <%= f.input :email, label: false, placeholder: "E-mail" %>
    
      <% if @minimum_password_length %>
        <em>(Senha de no mÃ­nimo <%= @minimum_password_length %> caracteres)</em>
      <% end %>
      <%= f.input :password, label: false, placeholder: "Senha", autocomplete: "off" %>
      <%= f.input :password_confirmation, label: false, placeholder: "Confirmar senha", autocomplete: "off" %>
    
      <%= f.button :submit, value: "Cadastrar", class: "btn btn-block btn-primary" %>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</div>