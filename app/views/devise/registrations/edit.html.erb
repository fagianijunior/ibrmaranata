<h2>Edit <%= resource_name.to_s.humanize %></h2>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal', multipart: true }) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="col col-md-6 text-center">
      <br>
      <%= cl_image_tag @user.avatar_url, width:400, height:400, crop: :fill, gravity: :face, class: "img-rounded img-responsive center-block" unless @user.avatar_url.nil? %>
      <%= f.hidden_field :avatar_cache %>
      <center><%= f.input :avatar, as: :file, label: false %></center>
    </div>
    <div class="col col-md-6">
      <%= f.input :name %>
      <%= f.input :email, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <%= f.input :password, autocomplete: "off", placeholder: "Deixe em branco se não deseja trocar a senha", autocomplete: "off" %>
      <%= f.input :password_confirmation, autocomplete: "off" %>
      <%= f.input :current_password, placeholder: "Precisamos da sua senha para poder confirmar as mudanças", autocomplete: "off" %>
      <%= f.button :submit, class: "btn btn-block btn-primary" %>
    </div>
  </div>
<% end %>

