<div class="row">
  <div class="col col-md-5 col-md-offset-3">
    <br><br>
    <center><h2>Entrar</h2></center>
    <br>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
      <%= f.input :email, label: false, autofocus: true, placeholder: "E-mail" %>
      <%= f.input :password, label: false, autocomplete: "off", placeholder: "Senha" %>

      <% if devise_mapping.rememberable? -%>
        <%= f.input :remember_me, as: :boolean, label: "Lembrar de mim"%>
      <% end -%>
      <%= f.button :submit, class: "btn btn-block btn-primary", value: "Entrar" %>
      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>