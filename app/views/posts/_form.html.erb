<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= image_tag(@post.cover_url) if @post.cover? %>
    <%= f.file_field :cover %>
    <%= f.hidden_field :cover_cache %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= tinymce %>
    <%= f.text_field :content, class: "tinymce" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>